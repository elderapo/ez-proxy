{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2015", "es2017", "dom"],

    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",

    "noEmit": true,

    "strict": true,
    "strictPropertyInitialization": false,

    "declaration": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
